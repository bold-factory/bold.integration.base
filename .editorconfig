resharper_wrap_for_stmt_header_style = wrap_if_long
resharper_wrap_list_pattern = chop_if_long
resharper_wrap_object_and_collection_initializer_style = chop_always
resharper_wrap_primary_constructor_parameters_style = chop_if_long
resharper_xmldoc_max_line_length = 140
resharper_xml_max_line_length = 140

